<section>
    <h2>Post Something New</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="title" size="60" name="post-title" />
        </div>
        <div>
            <label for="post-text">Content</label>
            <textarea name="post-text" id="post_url"></textarea>
        </div>
        <button type="submit" class="btn">Create Post</button>
    </form>
</section>
<section>
    {{#each posts}}
    {{posts.id}}
    {{/each}}
</section>

<script src="/public/js/add-post.js"></script>